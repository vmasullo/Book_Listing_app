<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/marginLinearLayout"
    android:paddingLeft="@dimen/marginLinearLayout"
    android:paddingRight="@dimen/marginLinearLayout"
    android:paddingStart="@dimen/marginLinearLayout">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/marginLinearLayout"
        android:layout_marginStart="@dimen/marginLinearLayout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingLeft"
            android:ellipsize="end"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeTitle"
            tools:text="@string/title" />

        <TextView
            android:id="@+id/autore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/paddingLeft"
            android:textColor="@color/autore"
            android:textSize="@dimen/textSizeRest"
            tools:text="@string/autore" />

        <TextView
            android:id="@+id/editore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/paddingLeft"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeRest"
            tools:text="@string/Editore" />

        <TextView
            android:id="@+id/pagine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/paddingLeft"
            android:paddingBottom="@dimen/paddingLeft"
            android:textSize="@dimen/textSizeRest"
            tools:text="@string/pagine" />
    </LinearLayout>


</LinearLayout>